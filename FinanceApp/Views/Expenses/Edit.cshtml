@model FinanceApp.Models.Expense

@{
	ViewData["Title"] = "Edit";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
	<div class="border p-4 rounded shadow" style="min-width: 400px;">
		<h2>Edit Expense</h2>
		<form asp-action="Edit"
			  method="post">
			<div>
				<label asp-for="Description"
					   class="form-label">
					Descrtipion
				</label>
				<input asp-for="Description"
					   class="form-control"
					   type="text" />
			</div>
			<div>
				<label asp-for="Amount"
					   class="form-label">
					Amount
				</label>
				<input asp-for="Amount"
					   class="form-control"
					   type="number" />
			</div>
			<div>
				<label asp-for="CategoryId"
					   class="form-label">
					Category
				</label>
				<select asp-for="CategoryId"
						asp-items="ViewBag.CategoryId"
						class="form-control">
				</select>
			</div>
			<div class="mt-3">
				<button type="submit" 
					class="btn btn-outline-primary btn-sm">
					Save
				</button>
				<a asp-controller="Expenses" 
					asp-action="Index" 
					class="btn btn-outline-info btn-sm">
					Back
				</a>
			</div>
		</form>
	</div>
</div>